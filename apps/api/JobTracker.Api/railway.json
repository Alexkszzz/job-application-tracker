{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["dotnet-sdk_8"]
        },
        "install": {
          "cmds": ["dotnet restore"]
        },
        "build": {
          "cmds": [
            "dotnet publish -c Release -o out --no-restore"
          ]
        }
      },
      "start": {
        "cmd": "cd out && dotnet JobTracker.Api.dll"
      }
    }
  },
  "deploy": {
    "startCommand": "cd out && dotnet JobTracker.Api.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
