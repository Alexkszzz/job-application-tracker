{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["dotnet-sdk_8"]
        },
        "install": {
          "cmds": ["dotnet restore"]
        },
        "build": {
          "cmds": [
            "dotnet publish -c Release -o out --self-contained false -p:PublishReadyToRun=false"
          ]
        }
      },
      "start": {
        "cmd": "cd out && ./JobTracker.Api"
      }
    }
  },
  "deploy": {
    "startCommand": "cd out && ./JobTracker.Api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
